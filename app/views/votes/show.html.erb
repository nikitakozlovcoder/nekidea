<div class="page-wrapper vote-show">
  <%= render partial: './header.html.erb' %>
  <section class ="content container">
    <div class = "vote head">
      <div class = "head">
        <div class = "right">
          <div class = "person">
            <p>Создатель:</p>
            <a href="">
              <div class = "avatar">
                <%= image_tag user_avatar @vote.user %>
              </div>
              <div class = "name">
                <p><%= user_name @vote.user %></p>
              </div>
            </a>
          </div>
          <div class = "properties">
            <p>Тип: <span><%= vote_type @vote%></span></p>
          </div>
          <div class = "phase">
            <p>Находится в фазе: <span><%= vote_phase @vote%></span></p>
          </div>        
        </div>

          <div class = "left">

            <div class = "time">
              <p><%= @vote.vote_status != 'archived'? 'Приём заявок до':'Дата архивации' %>: <span><%=  phase_upto @vote%></span></p>
            </div>

          </div>
        </div>

    </div>
    <div class = "vote main">
      <h1 class = "vote_title"><%= @vote.title %></h1>
      <div class = "vote_body">
        <p><%= @vote.body %></p>
      </div>
      <% iterations = @vote.iterations %>
      <% current_iter = @vote.current_iter %>
      <% current_iter = -1 + iterations.count if @vote.vote_status == "archived" %>
      <% iterations.each_with_index do |el, i| %>
        <% next if i==0  %>
        <div class = "iter <%= 'active' if i== current_iter  %>">
          <div class = "num"></div>
          <div class = "body">
            <div class = "strip"></div>
            <div class = "text">
              <h4><%= el['title'] %></h4>
              <p><%= el['body'] %></p>
            </div>
          </div>
        </div>
      <% end %>


      <br>
      <% if @vote.pictures.count > 0 %>
        <div class = "images">
        <h3>Фото к проблеме</h3>
        <div class="owl-carousel owl-theme">

          <% @vote.pictures.each do |pict| %>
            <div> <a><%= image_tag pict %></a></div>
